@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<h1> Vendors </h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendor/@vendor.Id'>@vendor.VendorName</a></h3>
}

<h3><a href='/vendor/new'>New Vendor</a></h3>

<h3><a href='/'>Back Home</a></h3>