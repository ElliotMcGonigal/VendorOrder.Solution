@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<h2>Vendor: @Model["vendor"].VendorName</h2>
<h4>Description of vendor: @Model["vendor"].VendorDescription</h4>

<h3>Here are all the orders:</h3>

@if (@Model["orders"].Count == 0)
{
  <h3>No orders yet!</h3>
}

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendor/@Model["vendor"].Id/order/@Model["orders"].IndexOf(order)'>@order.OrderTitle</a></li>
}
</ol>

<h3><a href='/vendor/@Model["vendor"].Id/order/new'>Create New Order!</a></h3>

<h3><a href='/vendor'>Back to vendors!</a></h3>